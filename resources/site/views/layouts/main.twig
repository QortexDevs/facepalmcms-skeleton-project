<!DOCTYPE html>
<html>
<head lang="ru">
    <title>{{ meta.title }}</title>
    <meta charset="UTF-8">
    {#<link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">#}

    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">

    <link href='{{ staticRoot }}assets/build/site/css/vendor.css?{{ busters['assets/build/site/css/vendor.css'] }}'
          rel='stylesheet' type='text/css'>
    <link href='{{ staticRoot }}assets/build/site/css/main.css?{{ busters['assets/build/site/css/main.css'] }}' rel='stylesheet'
          type='text/css'>

    <meta name="theme-color" content="{{ colors[header.color] }}">
    <meta name="msapplication-navbutton-color" content="{{ colors[header.color] }}">

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

    {#<link rel="shortcut icon" href="favicon.ico" type="image/x-icon">#}
    {#<link rel="icon" href="favicon.ico" type="image/x-icon">#}
</head>
<body onunload="" data-token="{{ csrf_token }}" data-user-id="{{ user.id }}">
<div class="page-wrapper">
    {% block pageContent %}
    {% endblock pageContent %}
</div>
<script>
    var root = '{{ root }}';
    var staticRoot = '{{ staticRoot }}';
</script>
<script src="{{ staticRoot }}assets/build/site/js/vendor.js?{{ busters['assets/build/site/js/vendor.js'] }}"></script>
<script src="{{ staticRoot }}assets/build/site/js/all.js?{{ busters['assets/build/site/js/all.js'] }}"></script>
</body>
</html>
